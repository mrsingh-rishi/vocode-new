# Required environment variables for main.py

# Twilio Configuration (Required for telephony)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI Configuration (Required for LLM)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs Configuration (Required for text-to-speech)
ELEVEN_LABS_API_KEY=your_elevenlabs_api_key_here
ELEVEN_LABS_VOICE_ID=9BWtsMINqrJLrRacOk9x

# Deepgram Configuration (Required for speech-to-text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Base URL for webhooks (Optional - if not set, ngrok will be used)
BASE_URL=your_public_domain.com

# Ngrok Configuration (Optional - for local development tunneling)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

# Redis Configuration (Optional - defaults provided for Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Azure Speech Services (Optional - alternative to other services)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here
